@model IEnumerable<Contact>

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Contact Manager</h1>
            <form asp-action="UploadCsv" method="post" enctype="multipart/form-data" class="mb-4">
                <div class="form-group">
                    <label for="csvFile" class="form-label">Upload CSV file:</label>
                    <input type="file" class="form-control" id="csvFile" name="csvFile" />
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
                @Html.AntiForgeryToken()
            </form>

            <div class="input-group mb-3">
                <input type="text" id="filterInput" class="form-control" placeholder="Filter value..." />
            </div>

            <table class="table table-striped table-hover" id="contactsTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Married</th>
                        <th>Phone</th>
                        <th>Salary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr data-id="@contact.Id">
                            <td contenteditable="true" data-name="@contact.Name">@contact.Name</td>
                            <td contenteditable="true" data-dateofbirth="@contact.DateOfBirth.ToShortDateString()">@contact.DateOfBirth.ToShortDateString()</td>
                            <td contenteditable="true" data-married="@contact.Married">@contact.Married.ToString().ToLower()</td>
                            <td contenteditable="true" data-phone="@contact.Phone">@contact.Phone</td>
                            <td contenteditable="true" data-salary="@contact.Salary">@contact.Salary</td>
                            <td>
                                <button class="btn btn-sm btn-success save-btn" data-id="@contact.Id">Save</button>
                                <button class="btn btn-sm btn-danger delete-btn" data-id="@contact.Id">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
